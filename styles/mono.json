{
	"title": "Mono",
	"settings": {
		"color": {
			"palette": [
				{
					"color": "#fcf9ee",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#562424",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#562424",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#9b1f1f",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#ffffff",
					"name": "Tertiary",
					"slug": "tertiary"
				}
			]
		},
		"typography": {
			"fluid": false,
			"fontSizes": [
				{
					"fluid": {
						"min": "1rem",
						"max": "1rem"
					},
					"size": "1rem",
					"slug": "small"
				},
				{
					"fluid": {
						"min": "1.125rem",
						"max": "1.125rem"
					},
					"size": "1.125rem",
					"slug": "medium"
				},
				{
					"fluid": {
						"min": "1.5rem",
						"max": "1.5rem"
					},
					"size": "1.5rem",
					"slug": "large"
				},
				{
					"fluid": {
						"min": "2rem",
						"max": "2rem"
					},
					"size": "2rem",
					"slug": "x-large"
				},
				{
					"fluid": {
						"min": "5rem",
						"max": "5rem"
					},
					"size": "5rem",
					"slug": "xx-large"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--ibm-plex-mono)"
		},
		"elements": {
			"button": {
				"border": {
					"radius": "2em"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--tertiary)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--system-font)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--tertiary)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--primary)",
						"text": "var(--wp--preset--color--tertiary)"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--tertiary)"
					}
				}
			},
			"h1": {
				"typography": {
					"fontSize": "3rem",
					"lineHeight": "1.15",
					"letterSpacing": "-2px"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "2.375rem",
					"lineHeight": "1.2",
					"letterSpacing": "-2px"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "1.625rem",
					"fontWeight": "500",
					"lineHeight": "1.2",
					"letterSpacing": "-2px"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "1.375rem",
					"fontWeight": "600",
					"letterSpacing": "-2px"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "1.125rem",
					"fontWeight": "700",
					"letterSpacing": "2px"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "1rem",
					"fontWeight": "400",
					"lineHeight": "1.4",
					"textTransform": "uppercase"
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "400",
					"lineHeight": "1.3"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				}
			}
		},
		"blocks": {
			"core/comment-author-name": {
				"typography": {
					"fontWeight": "600"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/comment-date": {
				"typography": {
					"fontWeight": "600",
					"textTransform": "uppercase"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/comment-edit-link": {
				"typography": {
					"fontWeight": "600",
					"textTransform": "uppercase"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/image": {
				"border": {
					"radius": "100px 0 0 0"
				}
			},
			"core/navigation": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--secondary)"
							},
							"typography": {
								"fontWeight": "700",
								"textDecoration": "underline"
							}
						},
						":focus": {
							"color": {
								"text": "var(--wp--preset--color--secondary)"
							},
							"typography": {
								"fontWeight": "700",
								"textDecoration": "underline dashed"
							}
						},
						":active": {
							"typography": {
								"textDecoration": "none"
							}
						}
					}
				}
			},
			"core/post-featured-image": {
				"border": {
					"radius": "100px 0 0 0"
				}
			},
			"core/pullquote": {
				"shadow": "inset 0 0 0 1px var(--wp--preset--color--secondary)"
			},
			"core/quote": {
				"spacing": {
					"padding": {
						"left": "2rem"
					}
				},
				"border": {
					"color": "var(--wp--preset--color--secondary)",
					"width": "0 0 0 1px",
					"style": "solid"
				}
			},
			"core/site-title": {
				"typography": {
					"fontWeight": "700",
					"lineHeight": "1.11",
					"letterSpacing": "2px",
					"textTransform": "uppercase"
				}
			}
		}
	},
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json"
}
